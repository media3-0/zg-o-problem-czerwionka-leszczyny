<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.media30.zglosproblem.mobileapp.DescriptionActivity"
    android:background="@drawable/foto2">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:inputType="textMultiLine"
        android:id="@+id/editText"
        android:background="@drawable/back"
        android:singleLine="false"
        android:padding="10dp"
        android:maxLength="1000"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageButton4"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="left|top"
        android:hint="Dodaj opis..." />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:src="@drawable/img7"
        android:onClick="wsteczClick"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:background="@null"
        android:src="@drawable/img16"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="dalejClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="6dp"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:onClick="pickCategory"
        android:background="@null"
        android:src="@drawable/kategorie" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvCat"
        android:layout_marginTop="10dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:background="@null"
        android:adjustViewBounds="false"
        android:src="@drawable/domekczerwony"
        android:scaleType="fitStart"
        android:onClick="homeClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo_min"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
